<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="25dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:gravity="start"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/ConfigButton"
            android:layout_width="352dp"
            android:layout_height="80dp"
            android:text="Konfiguracja"
            android:onClick="btns_onClick"
            tools:layout_editor_absoluteX="28dp"
            tools:layout_editor_absoluteY="605dp" />

        <Button
            android:id="@+id/PrzebiegiTHPBtn"
            android:layout_width="352dp"
            android:layout_height="60dp"
            android:onClick="btns_onClick"
            android:text="Przebiegi czasowe THP"
            tools:layout_editor_absoluteX="28dp"
            tools:layout_editor_absoluteY="268dp" />

        <Button
            android:id="@+id/PrzebiegiRPYBtn"
            android:layout_width="352dp"
            android:layout_height="60dp"
            android:onClick="btns_onClick"
            android:text="Przebiegi czasowe RPY"
            tools:layout_editor_absoluteX="28dp"
            tools:layout_editor_absoluteY="268dp" />

        <Button
            android:id="@+id/PrzebiegJoystickBtn"
            android:layout_width="352dp"
            android:layout_height="60dp"
            android:onClick="btns_onClick"
            android:text="Joystick"
            tools:layout_editor_absoluteX="28dp"
            tools:layout_editor_absoluteY="268dp" />

        <Button
            android:id="@+id/DiodyBtn"
            android:layout_width="352dp"
            android:layout_height="60dp"
            android:text="Sterowanie diodami"
            android:onClick="btns_onClick"
            tools:layout_editor_absoluteX="28dp"
            tools:layout_editor_absoluteY="489dp" />

        <Button
            android:id="@+id/ListBtn"
            android:layout_width="352dp"
            android:layout_height="60dp"
            android:text="Kalkulator jednostek"
            android:onClick="btns_onClick"
            tools:layout_editor_absoluteX="28dp"
            tools:layout_editor_absoluteY="489dp" />

        <Button
            android:id="@+id/TblBtn"
            android:layout_width="352dp"
            android:layout_height="60dp"
            android:text="Dynamiczna tablica"
            android:onClick="btns_onClick"
            tools:layout_editor_absoluteX="28dp"
            tools:layout_editor_absoluteY="489dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

